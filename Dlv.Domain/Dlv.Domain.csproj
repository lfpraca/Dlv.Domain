<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0; net6.0</TargetFrameworks>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <WarningsAsErrors>nullable</WarningsAsErrors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>0.3.0-beta</Version>

        <Title>Dlv Domain</Title>
        <Summary>Helpers and source generator for invariant-maintaing domain objects</Summary>
        <Description>Helpers and source generator for invariant-maintaing domain objects</Description>
        <PackageTags>boilerplate;best-practices;ddd</PackageTags>
        <Authors>lfpraca</Authors>
        <PackageProjectUrl>https://github.com/lfpraca/Dlv.Domain</PackageProjectUrl>
        <RepositoryUrl>https://github.com/lfpraca/Dlv.Domain</RepositoryUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Dlv.Domain.SourceGen\Dlv.Domain.SourceGen.csproj" />
    </ItemGroup>

</Project>

